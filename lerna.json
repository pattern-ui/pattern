{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md", "**/test/**", "**/develop/**"],
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": ["**/*.md"]
}
