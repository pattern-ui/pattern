{
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "cjs",
    "jest-config.js",
    "config/storybook/main.js",
    "lib/**/*",
    "esm/**/*",
    "cjs/**/*"
  ],
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "incremental": true,
    "baseUrl": "."
  }
}
