{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types",
    "../../config/types"
  ],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@pattern-ui/core": ["../pattern-core/src"],
      "@pattern-ui/hooks": ["../pattern-hooks/src"],
      "@pattern-ui/storybook": ["../pattern-storybook/src"],
      "@pattern-ui/tests": ["../pattern-tests/src"]
    }
  },
  "references": [
    { "path": "../pattern-core" },
    { "path": "../pattern-hooks" },
    { "path": "../pattern-storybook" },
    { "path": "../pattern-tests" }
  ]
}
